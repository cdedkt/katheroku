{% extends "layout.njk" %}

{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
  <li class="breadcrumb-item active" aria-current="page">{{category.label}}</li>
{% endblock %}


{% block content %}
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      {% for product in products %}
      <div class="col-10 col-lg-3">

        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="https://www.decathlon.fr/media/{{product.image_path}}" alt="Decathlon">
          <div class="card-body">
            <a href="/products/{{product.id}}/category/{{category.id}}">
              <p class="card-text">{{product.title}}</p>
            </a>
            <small class="text-muted">RÃ©f: {{product.decathlon_id}}</small>
          </div>
        </div>

      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
